{
    "*" : {
        
        "config": {
            "preloadAssets"     : ["css", "js", "tpl", "img"],
            "handleAnchoreHref" : "^https?:",
            "captureAnchors"    : "a",
            "siteContext"       : "",
            "siteIndexView"     : "/index.html",
            "site404View"       : "/404.html",
            "site500View"       : "/500.html",
            "rootElement"       : "main.application"
        },

        "js"    : [
            "js/lib/lodash.min.js",
            "js/lib/handlebars.js",
            "js/lib/handlebars.helpers.js",
            "js/lib/native.history.js",
            
            "js/app.js"
        ],

        "css"   : [
            "https://fonts.googleapis.com/css?family=Lato", 
            "css/aem-components.css",
            "css/components.css",
            "css/global.css"
        ],

        "tpl": [
            "tpl/partials/components/_link-button.html"
        ]

    },

    "/index.html": {

        "tpl"   : ["tpl/layouts/index.html"],
        "css"   : ["css/view/index.css"],
        "js"    : ["js/view/index.js"]
    
    },

    "/aquatic.html": {

        "tpl"   : ["tpl/layouts/animal-page.html", "tpl/partials/_animal-list.html", "tpl/partials/_button-list.html",  "tpl/partials/components/_animal-card.html"],
        "img"   : ["img/dolphin.png", "img/turtle.png"],
        "js"    : ["js/view/aquatic-terrestrial.js"]
    
    },

    "/terrestrial.html": {

        "tpl"   : ["tpl/layouts/animal-page.html", "tpl/partials/_animal-list.html", "tpl/partials/_button-list.html",  "tpl/partials/components/_animal-card.html"],
        "img"   : ["img/elephant.png", "img/panda.png", "img/hippopotamus.png"],
        "js"    : ["js/view/aquatic-terrestrial.js"]
    
    }
    
}